<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jejunu.daumkakao.repository.UserDao">
	<select id="findAll" resultType="User" >
		select 
			name,price,seller,day
		from userinfo
	</select>
	<insert id="insert" parameterType="User">
		insert into userinfo(name,price,seller,day,productinform) values(#{name}, #{price},#{seller},#{day}, #{productinform})
	</insert>
	<delete id="delete">
		delete from userinfo where name = #{name}
	</delete>
	<select id="findbyName" resultType="User">
		select 
			name	
		from userinfo where name = #{name}
	</select>

	<update id="update" parameterType="User"> 
		update userinfo set price=#{price}, seller=#{seller}, day=#{day},, productinform=#{productinform} where name = #{name}
	</update> 
</mapper>